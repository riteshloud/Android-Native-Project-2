       <item name="android:windowSoftInputMode">adjustNothing</item>
    </style>

    <style name="RadioButtonStyleOryx" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_oryx_trade</item>
    </style>

    <style name="HomeActivityTheme" parent="Theme.AppCompat.NoActionBar">
