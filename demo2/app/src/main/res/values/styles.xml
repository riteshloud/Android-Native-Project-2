    <style name="SplashBack" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SignupBack" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/slate_grey_welcome</item>
        <item name="android:windowBackground">@drawable/register_back_drw</item>
    </style>

    <style name="CalendarDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/bottom_select</item>
    </style>

    <style name="CalendarDialog_Red" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red_dark_btn</item>
    </style>

    <style name="WalletsList">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/medium_size</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/muli_bold</item>
    </style>

    <style name="CommonSubmitButtonLayout">
        <item name="android:layout_marginTop">@dimen/common_submit_button_top</item>
        <item name="android:layout_marginBottom">@dimen/common_submit_button_bottom</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--should be declare inside relative layout-->
    <style name="CommonSubmitButtonText">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/muli_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/medium_size</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="CommonSelfTradingSubmitButtonText">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/muli_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/small_15_size</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

